<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>ua.training.controller.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ua.training.controller.filter.AuthFilter</filter-class>
  </filter>
  <filter>
    <filter-name>i18n</filter-name>
    <filter-class>ua.training.controller.filter.LocaleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/rest/manager/*</url-pattern>
    <url-pattern>/rest/customer/*</url-pattern>
    <url-pattern>/rest/developer/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>i18n</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <description>MySQL</description>
  <resource-ref>
    <description>MySQL DevelopmentTeam Connection Pool</description>
    <res-ref-name>jdbc/development_team</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>